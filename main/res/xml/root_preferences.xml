<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="app_category"
        app:title="Security">

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:onClick="OnClickLock"
            app:defaultValue="false"
            app:key="lock"
            app:title="Lock your notes" />

        <Preference
            android:singleLine="true"
            android:visibility="gone"
            app:key="set_password"
            android:persistent="true"
            app:title="Set your password"
            tools:visibility="gone" />

        <EditTextPreference
            android:visibility="gone"
            app:key="password"
            android:persistent="true"
            android:defaultValue="0"
            app:defaultValue="0"
            app:title="Set your password"
            tools:visibility="gone" />

    </PreferenceCategory>
    <PreferenceCategory
        app:key="note_sorting_category"
        app:title="Note sorting" >
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="direction"
            android:title="Ascending" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="sort_time"
            android:title="Date and time " />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="sort_title"
            android:title="Title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="sort_ID"
            android:title="ID" />
    </PreferenceCategory>
</PreferenceScreen>
